/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include "snes_gamepad_nrf52840-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "SNES Gamepad nRF52840";
	compatible = "snes_gamepad_nrf52840";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,ieee802154 = &ieee802154;
	};

	rtt0: rtt_chan0 {
		compatible = "segger,rtt-uart";
		status = "okay";
	};

	leds {
		compatible = "gpio-leds";
		led0_red: led_0 {
			gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
			label = "Red LED 0";
		};
		led0_green: led_1 {
			gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;
			label = "Green LED 0";
		};
		led0_blue: led_2 {
			gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;
			label = "Blue LED 0";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		red_pwm_led: pwm_led_0 {
			pwms = <&pwm0 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};
		green_pwm_led: pwm_led_1 {
			pwms = <&pwm0 1 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};
		blue_pwm_led: pwm_led_2 {
			pwms = <&pwm0 2 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};
	};

	buttons {
		compatible = "gpio-keys";
		a_button: button_a {
			gpios = <&gpio0 2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "A button";
			zephyr,code = <INPUT_KEY_A>;
		};
		b_button: button_b {
			gpios = <&gpio0 4 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "B button";
			zephyr,code = <INPUT_KEY_B>;
		};
		x_button: button_x {
			gpios = <&gpio1 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "X button";
			zephyr,code = <INPUT_KEY_X>;
		};
		y_button: button_y {
			gpios = <&gpio0 26 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Y button";
			zephyr,code = <INPUT_KEY_Y>;
		};
		left_button: button_left {
			gpios = <&gpio0 24 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Left button";
			zephyr,code = <INPUT_KEY_LEFT>;
		};
		right_button: button_right {
			gpios = <&gpio0 22 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Right button";
			zephyr,code = <INPUT_KEY_RIGHT>;
		};
		up_button: button_up {
			gpios = <&gpio1 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Up button";
			zephyr,code = <INPUT_KEY_UP>;
		};
		down_button: button_down {
			gpios = <&gpio0 20 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Down button";
			zephyr,code = <INPUT_KEY_DOWN>;
		};
		start_button: button_start {
			gpios = <&gpio0 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Start button";
			zephyr,code = <INPUT_KEY_0>;
		};
		select_button: button_select {
			gpios = <&gpio0 12 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Select button";
			zephyr,code = <INPUT_KEY_1>;
		};
		lt_button: button_lt {
			gpios = <&gpio0 15 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Left-trigger button";
			zephyr,code = <INPUT_KEY_2>;
		};
		rt_button: button_rt {
			gpios = <&gpio1 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Right-trigger button";
			zephyr,code = <INPUT_KEY_3>;
		};
	};

	vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc 7>;
		output-ohms = <10000000>;
		full-ohms = <(3900000 + 10000000)>;
	};

	/* I = (V / R) * 400 */
	icharge {
		compatible = "voltage-divider";
		io-channels = <&adc 5>;
		output-ohms = <1800>;
		full-ohms = <1800>;
		power-gpios = <&gpio0 9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {

		sw0 = &start_button;
		led0 = &led0_red;
		led1 = &led0_green;
		led2 = &led0_blue;

		led0-red   = &led0_red;
		led0-green = &led0_green;
		led0-blue  = &led0_blue;

		pwm-led0 = &red_pwm_led;
		pwm-led1 = &green_pwm_led;
		pwm-led2 = &blue_pwm_led;

		red-pwm-led = &red_pwm_led;
		green-pwm-led = &green_pwm_led;
		blue-pwm-led = &blue_pwm_led;

		watchdog0 = &wdt0;
	};
};

&gpiote {
	status = "okay";
};

&uicr {
	nfct-pins-as-gpios;
	gpio-as-nreset;
};

&gpio0 {
	status = "okay";
	// https://devzone.nordicsemi.com/f/nordic-q-a/88382/how-to-use-sense-edge-mask
	sense-edge-mask = <0xffffffff>;
};

&gpio1 {
	status = "okay";
	sense-edge-mask = <0xffffffff>;
};

&adc {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};
&ieee802154 {
	status = "okay";
};

/* Include flash partition table.
 * Two partition tables are available:
 * fstab-stock        -compatible with Nordic nRF5 bootloader, default
 * fstab-debugger    -to use an external debugger, w/o the nRF5 bootloader
 */
#include "fstab-stock.dtsi"
// #include "fstab-uf2.dtsi"

zephyr_udc0: &usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";

	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
	};
};